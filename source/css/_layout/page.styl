//Home
#content-outer
  width: 100%
  padding-top 1rem
  position: relative

  #content-inner
    padding-bottom: 3rem

    ul, ol, dl
      margin-top: 0.4rem
      padding: 0 0 0 0.8rem

  #recent-posts
    margin: auto
    padding: 2rem

    .recent-post-item
      background-color: white;
      margin-bottom: 3rem
      padding: 10px 20px 10px 20px
      border-radius: 10px
      -webkit-box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.1);
      -moz-box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.1);
      box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.1);

      .post-title
        a
          font-size: 1.5rem
          -webkit-transition: all .1s ease-in-out
          -moz-transition: all .1s ease-in-out
          -o-transition: all .1s ease-in-out
          -ms-transition: all .1s ease-in-out

          &:hover
            font-weight  500

      .post-time
      .recent-post-tags
      .post-tag
        color $color-dark-grey
        margin-right: 10px

      blockquote
        margin: 5px 0
        border-left: .25em solid $color-grey
        color: #6a737d;
        padding: 0 1em;

      .recent-post-content
        img,video,audio
          width 100%
      .read-more
        color: #fff
        font-size: 15px
        background-color: $color-blue
        -webkit-transition: background-color .2s ease-in-out
        -moz-transition: background-color .2s ease-in-out
        -o-transition: background-color .2s ease-in-out
        -ms-transition: background-color .2s ease-in-out
        border-radius: 16px
        line-height: 2
        width: 5rem
        margin: 10px auto
        text-align center
        padding: 0 17px

        &:hover
          background-color: $color-light-blue

        a
          color: white


#about
#tag
#archive
  margin auto
  padding-bottom: 2rem


//About
#about
  min-height: 20rem
  .about-title
    text-align center
    font-size 2rem

  .article-container
    p:nth-of-type(1)
      width 10rem
      margin auto
      position: relative

      img
        width 100%


//Archive
#article
.article
  &-title
    text-align center
    font-size 2rem

  &-item
    position: relative
    margin-left 1.5rem

    &.year
      margin-left 0
      font-size: 1.5rem
      font-weight bold

    &__time
      position: absolute

    &__title
      display: block
      margin-left: 5rem
      text-decoration: underline
      cursor: pointer



//Tag
#tag
  .tag-title
    text-align center
    font-size 2rem

  ul,li
    list-style:none

  .tag-list
    display: flex
    flex-wrap: wrap
    justify-content: center

    .tag-list-item
      position relative
      padding: 4px 10px
      border: 1px dashed #a4a4a4
      margin: 10px 15px
      cursor: pointer

      &:hover
        color: $color-light-blue !important

      .tag-list-count
        position absolute
        top: 0
        right: 6px
    a
      display: block
      margin: 0 0.4rem

      &:hover
        color: $color-light-blue !important
