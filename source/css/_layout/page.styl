//Home
#content-outer
  background-color: #e6ecf0
  width: 100%
  padding-top 1rem
  position: relative

  #content-inner
    padding-bottom: 3rem
    h1,
    h2,
    h3,
    h4,
    h5,
    h6
      cursor: pointer
      transition: all 0.2s ease-out

      &:hover
        padding-left: 1rem
        color: $color-light-blue
    ul, ol, dl
      margin-top: 0.4rem
      padding: 0 0 0 0.8rem
  #recent-posts
    margin: auto
    padding: 2rem

    .recent-post-item
      background-color: #fff
      margin-bottom: 3rem
      padding: 10px 20px 10px 20px
      border-radius: 5px
      -webkit-box-shadow: 1px 1px 8px rgba(0, 0, 0, 0.2);
      -moz-box-shadow: 1px 1px 8px rgba(0, 0, 0, 0.2);
      box-shadow: 1px 1px 8px rgba(0, 0, 0, 0.2);

      .post-title
        a
          font-size: 1.5rem
          -webkit-transition: all .1s ease-in-out
          -moz-transition: all .1s ease-in-out
          -o-transition: all .1s ease-in-out
          -ms-transition: all .1s ease-in-out
          color: #383838

          &:hover
            color: black
            font-weight  500

      .post-time
      .post-tag
        color #676767
        margin-right: 10px

      .recent-post-content
        img,video,audio
          width 100%
      .read-more
        color: #fff
        font-size: 15px
        background-color: $color-blue
        -webkit-transition: background-color .2s ease-in-out
        -moz-transition: background-color .2s ease-in-out
        -o-transition: background-color .2s ease-in-out
        -ms-transition: background-color .2s ease-in-out
        border-radius: 16px
        line-height: 2
        width: 5rem
        margin: 10px auto
        text-align center
        padding: 0 17px

        &:hover
          background-color: $color-light-blue

        a
          color: white

//About
#page
  background-color white
  position relative
  height: 20rem
  width 80%
  padding 1rem
  margin 0 10%
  font-size: 1rem

  h1
    font-size: 1.5rem

  .article-container
    p:nth-of-type(1)
      position: absolute

      img
        width 100%

//Archive
