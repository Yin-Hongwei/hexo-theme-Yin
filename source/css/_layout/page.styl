// Home
#content-outer {
  width: 100%;
  padding-top: 80px;
  margin-bottom: 1rem;
  position: relative;

  height calc(100vh- 100px) {
    ul, ol, dl {
      margin-top: 0.4rem;
      padding: 0 0 0 0.8rem;
    }
  }
}

#about, #archive {
  margin: auto;
  padding: 0 10px 1rem 10px;
  color: $color-black-dark;
}

// About
#about {
  min-height: 20rem;

  .about-title {
    font-size: 2rem;
  }

  .article-container {
    p:nth-of-type(1) {
      width: 100%;
      margin: auto;
      position: relative;

      img {
        width: 20vw;
      }
    }
  }
}

// Archive
#archive {
  // margin-left: 25vw;
  // width: 75vw;
  .article-title {
    font-size: 2rem;
  }

  .article-sort {
    &-item {
      position: relative;

      &.year {
        margin-left: 0;
        font-size: 1.2rem;
        font-weight: bold;
        color: $theme-color;

        &:hover {
          &:before {
            border-color: $color-black-dark;
          }
        }

        &:before {
          border: none;
        }
      }

      &__time {
        position: absolute;
        color: $color-black-light;
      }

      &__title {
        display: block;
        margin-left: 5rem;
        cursor: pointer;
        color: $color-black-light;
      }
    }

    a {
      &:hover, &:before {
        color: $color-black-dark;
        transition: all 0.2s ease-in-out;
      }
    }
  }
}

#site-social-icons {
  margin: 0 auto;
  width: 15rem;
  text-align: center;

  .social-icon {
    margin: 0 0.5rem;
    color: $color-light-black;
    text-shadow: 0.1rem 0.1rem 0.2rem rgba(0, 0, 0, 0.15);
    font-size: 1.2rem;
    cursor: pointer;
  }
}
