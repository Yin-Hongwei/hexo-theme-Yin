#sidebar {
    position: fixed;
    top: 0;
    width: $sidebar-width;
    left: -300px;
    z-index: 10;
    overflow-y: auto;
    padding: $header-height 0.5rem;
    height: 100%;

    .author-info {
        padding: 1rem 0;

        &.hide {
            display: none;
        }

        &__avatar {
            margin: 0 auto;
            width: w = 8rem;
            height: w;
            border-radius: 5px;
            overflow: hidden;

            img {
                width: 100%;
            }
        }

        &__name {
            font-size: 1rem;
            font-weight: bold;
            text-align: center;
        }
    }

    #site-social-icons {
        text-align: center;
    }

    .sidebar-toc {
        ol, li {
            list-style: none;
        }

        ol {
            margin-top: 0.2rem;
            padding-left: 0.4rem;
        }

        &__title {
            padding-right: 0.5rem;
            text-align: center;
            font-size: unit(0.9 * $rem, 'px');
        }

        .toc-link {
            display: block;
            padding-left: 0.2rem;
            border-right: 3px solid transparent;
            text-decoration: none;
            transition: all 0.2s ease-in-out;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;

            &.active {
                color: $color-black-dark;
                font-weight: bold;
            }
        }
    }
}
