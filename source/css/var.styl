// Theme Global Color
$theme-color = #49B1F5
$theme-header-color = #242424
$theme-header-text-color =  #EEEEEE
$theme-body-color = #fafafa
$theme-footer-color = #242424
$theme-footer-text-color = #EEEEEE

//Colors
$color-border = #ddd
$color-link = #7a9eb8
$color-img-border = #eaeefb
$color-white = #FFFFFF
$color-light-white = #f8f8f8
$color-light-grey = #EEEEEE
$color-grey = #dfe2e5
$color-dark-grey = #999
$color-black = #4C4948
$color-light-black = black
$color-blue = #95d1f7
$color-light-blue = #2aa3ef
$color-light-green = #69ba6d
$color-dark-green = #53a19f
$color-yellow = #f1fdde
$color-blockquote-default = #6a737d
$a-hover-color = #82AAFF


// Fonts
$font-sans = -apple-system, BlinkMacSystemFont,
        "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell",
        "Fira Sans", "Droid Sans", "Helvetica Neue",
        sans-serif
$font-mono = "Source Code Pro", Consolas, Monaco, Menlo, Consolas, monospace
$code-font = consolas, Menlo, "PingFang SC", "Microsoft YaHei", monospace, Helvetica Neue For Number
$font-family = Lato, Helvetica Neue For Number, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, PingFang SC, Hiragino Sans GB, Microsoft YaHei, Helvetica Neue, Helvetica, Arial, sans-serif
$font-size = 16px

// Global Variables
$rem = 20px
$text-line-height = 2
$line-height = 1.6em
$line-height-title = 1.1em

// page
$content-width = 700px
$iframe-height = (700 / 16 * 9)px
$content-large-width = 900px
$iframe-large-height = (900 / 16 * 9)px
$img-border-padding = 4px

// Header
$logo-size = 40px
$subtitle-size = 16px
$banner-height = 300px

//Layout
$block-margin = 50px
$article-padding = 20px

// Media queries
$sm = 768px
$bg = 1024px
$md = 1300px
$lg = 1450px
