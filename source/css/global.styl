html
  font-size: $rem

body
  margin: 0
  padding: 0
  position: relative
  display: flex
  flex-direction: column
  min-height: 100%
  background-color $theme-body-color
  color: $font-black
  font-size: $font-size
  font-family: $font-family
  line-height: $text-line-height
  -webkit-text-size-adjust: 100%

html, body, #container
  height: 100%

a
  text-decoration: none
  color: $color-light-black

  img, video
    max-width: 100%
    height: auto
    display: block
    margin: auto
    padding: $img-border-padding
    border: 1px solid $img-border-color
    transition: all 0.2s

h1, h2, h3, h4, h5, h6, p, div
  margin 0

*
  box-sizing: border-box

table
  overflow: auto
  width: 100%
  border-spacing: 0
  border-collapse: collapse

.outer
  clearfix()
  max-width: ($column-width + $gutter-width) * $columns + $gutter-width
  margin: 0 auto
  padding: 0 $gutter-width

.inner
  column($columns)

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

@media screen and (min-width: $sm)
  #recent-posts
  #tag
  #archive
  #post
  #about
    width 50%

@media screen and (min-width: $sm) and (max-width: $bg)
  #recent-posts
  #tag
  #archive
  #post
  #about
    width 70%

@media screen and (max-width: $bg)
  #recent-posts
    width: 100%
  #tag
  #archive
  #about
    width 90%
  #post
    width: 95%
